<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/colorTextWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/img_book"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/sacha"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/img_book"
        app:layout_constraintLeft_toRightOf="@+id/img_book"
        android:text="Đắc Nhân Tâm"
        android:textSize="23dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/cl_tv_namebook"
        android:fontFamily="@font/seg_ui_semibold"/>
    <TextView
        android:id="@+id/tv_tacgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_book"
        app:layout_constraintStart_toStartOf="@+id/tv_book"
        android:text="Lê Hiến"
        android:textSize="17dp"
        android:textColor="@color/cl_tv_namebook"
        />

        <ImageView
            android:id="@+id/img_value"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@drawable/icon_star"
            app:layout_constraintTop_toBottomOf="@+id/tv_tacgia"
            app:layout_constraintStart_toStartOf="@+id/tv_book"/>

    <TextView
        android:id="@+id/tv_gia"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="250$"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/card_bg_item"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/colorTextPrimary"
        android:fontFamily="@font/seg_ui_semibold"/>



</androidx.constraintlayout.widget.ConstraintLayout>