<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/ll_shopping"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="16"
            android:background="@color/bg_buttonn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="2"
                android:background="@color/bg_buttonn"


                android:src="@drawable/back_icon"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="11"
                android:gravity="center"
                android:text="Chi tiết sản phẩm "
                android:textSize="30dp"
                />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:id="@+id/btn_cart">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_baseline_shopping_cart_24"
                    android:background="@color/bg_buttonn"
                    android:layout_marginTop="10dp"
                    android:scaleType="center"
                    />
                <com.nex3z.notificationbadge.NotificationBadge
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"

                    />
            </FrameLayout>
        </LinearLayout>

    </RelativeLayout>


    <ImageView
        android:id="@+id/img_book"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/sacha"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_shopping"/>

    <TextView
        android:id="@+id/tv_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/img_book"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Đắc Nhân Tâm"
        android:textSize="23dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/cl_tv_namebook"
        android:fontFamily="@font/seg_ui_semibold"/>
    <TextView
        android:id="@+id/tv_tacgia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_book"
        app:layout_constraintStart_toStartOf="@+id/tv_book"
        android:text="Lê Hiến"
        android:textSize="20dp"
        android:textColor="@color/cl_tv_namebook"
        />

    <ImageView
        android:id="@+id/img_value"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:src="@drawable/values"
        app:layout_constraintTop_toBottomOf="@+id/tv_tacgia"
        app:layout_constraintStart_toStartOf="@+id/tv_book"/>


    <TextView
        android:id="@+id/tv_gia"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:background="@drawable/card_bg_item"
        android:fontFamily="@font/seg_ui_semibold"
        android:gravity="center"
        android:text="250$"
        android:textColor="@color/colorTextPrimary"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="@+id/tv_book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/img_value"
        />

